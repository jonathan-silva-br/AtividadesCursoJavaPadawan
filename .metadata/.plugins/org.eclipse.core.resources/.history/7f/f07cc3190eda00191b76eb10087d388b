
public class Pessoa {
	//atributo
	//nome deve possuir pelo menos 
	private String nome;
	private String cpf;
	
	public String getNome() {
		return nome;
	}
	
	public void setNome(String nome) {
		if (nome.length() >= 3) {
			this.nome = nome;
		}else {
			System.out.println("Nome inválido!");
		}
	}
	
	public void setCPF(String cpf) {
		if (cpf.length() == 14) {
			this.cpf = cpf;
		}else {
			System.out.println("CPF inválido!");
		}
	}
}
